<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#5B4F504F"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:padding="20dp"
    tools:context="project.volunion.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/voluntarilyLogInBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/backgroundColor"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Gönüllü Giriş"
           />

        <Button
            android:id="@+id/voluntarilySignUpBtn"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Gönüllü Kayıt"
             />

        <Button
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/backgroundColor"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="15sp"
            android:text="Hesaptan çıkış"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/companyLogInBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundColor"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:text="Kurum Giriş"
          />

        <Button
            android:id="@+id/contactUsBtn"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Bize Ulaşın"
            android:layout_margin="5dp"
            android:backgroundTint="@color/backgroundColor"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/dashboard"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Ana sayfa"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:backgroundTint="@color/backgroundColor"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>